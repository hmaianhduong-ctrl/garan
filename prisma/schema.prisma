generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String
  createdAt DateTime  @default(now())
  posts     Post[]
  comments  Comment[]
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  description String
  content     String
  thumbnail   String?
  status      String
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])

  commentsLocked Boolean @default(false) // ðŸŸ¢ ThÃªm an toÃ n
  comments       Comment[]

  views       View[]      // ðŸŸ¢ Bá»• sung nháº¹
  reactions   Reaction[]  // ðŸŸ¢ Bá»• sung nháº¹
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())

  isHidden  Boolean @default(false) // ðŸŸ¢ ThÃªm an toÃ n

  postId    Int
  post      Post      @relation(fields: [postId], references: [id])
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}

model Media {
  id        Int       @id @default(autoincrement())
  url       String
  createdAt DateTime  @default(now())
}

model View {
  id        Int       @id @default(autoincrement())
  postId    Int
  createdAt DateTime  @default(now())

  post      Post @relation(fields: [postId], references: [id])
}

model Reaction {
  id      Int      @id @default(autoincrement())
  type    String
  postId  Int
  userId  Int?

  post    Post @relation(fields: [postId], references: [id])
  user    User? @relation(fields: [userId], references: [id])
}
